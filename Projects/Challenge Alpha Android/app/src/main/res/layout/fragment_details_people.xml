<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/fdPeopleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:src="@drawable/ic_launcher_background"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fdPeopleImage"
        app:layout_constraintEnd_toEndOf="@+id/fdPeopleImage"
        app:layout_constraintStart_toStartOf="@+id/fdPeopleImage"
        app:layout_constraintTop_toTopOf="@+id/fdPeopleImage" />

    <TextView
        android:id="@+id/fdNameKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/name_people_key"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fdPeopleImage" />

    <TextView
        android:id="@+id/fdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/fdNameKey"
        app:layout_constraintTop_toBottomOf="@id/fdPeopleImage"
        tools:text="Luke Skywalker" />

    <TextView
        android:id="@+id/fdHeightKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/height_people_key"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fdNameKey" />

    <TextView
        android:id="@+id/fdHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/fdNameKey"
        app:layout_constraintTop_toBottomOf="@id/fdNameKey"
        tools:text="172cm" />

    <TextView
        android:id="@+id/fdMassKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/mass_people_key"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fdHeightKey" />

    <TextView
        android:id="@+id/fdMass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/fdNameKey"
        app:layout_constraintTop_toBottomOf="@id/fdHeightKey"
        tools:text="77kg" />

    <TextView
        android:id="@+id/fdEyesColorKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/eyes_people_key"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fdMassKey" />

    <TextView
        android:id="@+id/fdEyesColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/fdEyesColorKey"
        app:layout_constraintTop_toBottomOf="@id/fdMass"
        tools:text="Castanhos" />

    <TextView
        android:id="@+id/fdBirthYearKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:text="@string/birth_year_people_key"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fdEyesColorKey" />

    <TextView
        android:id="@+id/fdBirthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/fdBirthYearKey"
        app:layout_constraintTop_toBottomOf="@id/fdEyesColor"
        tools:text="18BB2" />

</androidx.constraintlayout.widget.ConstraintLayout>