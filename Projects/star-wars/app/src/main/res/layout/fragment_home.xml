<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_home_text_title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/screen_padding_large"
        android:gravity="start|center_vertical"
        android:text="@string/home_title"
        android:textColor="@color/black"
        android:textSize="@dimen/title_size_large"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_home_img_title"
        app:layout_constraintTop_toTopOf="@id/fragment_home_img_title"
        app:layout_constraintEnd_toStartOf="@+id/fragment_home_img_title"/>


    <ImageView
        android:id="@+id/fragment_home_img_title"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:layout_marginEnd="@dimen/screen_padding_large"
        android:contentDescription="@string/home_img_logo_description"
        android:src="@drawable/logo_yellow"
        app:layout_constraintStart_toEndOf="@+id/fragment_home_text_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_home_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_empty_categories"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/fragment_home_shimmer"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:layout_marginBottom="@dimen/screen_padding_large"
        android:layout_marginEnd="@dimen/screen_padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_home_text_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_text_title">

        <include layout="@layout/shimmer_categories_layout" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_recycler"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:layout_marginBottom="@dimen/screen_padding_large"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/screen_padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_home_text_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_text_title"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_category" />

</androidx.constraintlayout.widget.ConstraintLayout>