<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_grid_img_button_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginStart="@dimen/screen_padding_large"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:contentDescription="@string/grid_icon_back"
        android:src="@drawable/ic_action_back"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_grid_text_title"
        app:layout_constraintEnd_toStartOf="@+id/fragment_grid_text_title"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_grid_text_title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/screen_padding_large"
        android:gravity="end|center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/title_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_grid_img_button_back"
        app:layout_constraintTop_toTopOf="@+id/fragment_grid_img_button_back" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragments_grid_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        app:layout_constraintEnd_toEndOf="@+id/fragment_grid_text_title"
        app:layout_constraintStart_toStartOf="@+id/fragment_grid_img_button_back"
        app:layout_constraintTop_toBottomOf="@+id/fragment_grid_img_button_back"
        app:startIconDrawable="@drawable/ic_action_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragments_grid_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            tools:text="@tools:sample/lorem" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/fragments_grid_empty"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:gravity="center"
        android:textSize="@dimen/title_size_large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_grid_recycler"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:layout_marginBottom="@dimen/title_size_large"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fragment_grid_text_title"
        app:layout_constraintStart_toStartOf="@+id/fragment_grid_img_button_back"
        app:layout_constraintTop_toBottomOf="@+id/fragments_grid_input_layout"
        app:spanCount="2"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/list_item_grid" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/fragment_grid_shimmer"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:layout_marginTop="@dimen/screen_padding_extra_large"
        android:layout_marginBottom="@dimen/screen_padding_large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fragment_grid_text_title"
        app:layout_constraintStart_toStartOf="@+id/fragment_grid_img_button_back"
        app:layout_constraintTop_toBottomOf="@+id/fragments_grid_input_layout">

        <include layout="@layout/shimmer_grid_layout" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>