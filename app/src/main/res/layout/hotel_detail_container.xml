<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_dimen">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="city" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hotelName"
            style="@style/headLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city"
            android:textColor="@color/black"
            tools:text="hotel name" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/hotelStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/default_dimen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotelName" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/freeCancellationLabel"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginTop="@dimen/default_dimen"
            android:layout_height="wrap_content"
            android:background="@drawable/free_cancelation_drawable"
            android:fontFamily="@font/poppins"
            android:padding="@dimen/default_dimen"
            android:text="@string/free_cancelation"
            android:textColor="@color/green"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/hotelStars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotelName"
            tools:visibility="visible" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/textDefault"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotelStars"
            tools:text="description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:id="@+id/viewMoreLabel"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:text="@string/view_more_label"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hotelAmenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/default_dimen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewMoreLabel"
            android:textColor="@color/black"
            tools:text="amenities" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hotelPrice"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            style="@style/priceBold"
            android:layout_marginTop="@dimen/default_dimen_twice"
            android:layout_marginEnd="@dimen/default_dimen"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotelAmenities"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="R$ 100" />

</androidx.constraintlayout.widget.ConstraintLayout>