<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".view.home.HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/dimenOf0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/home_title_name"
        android:textColor="@color/yellow_title_text"
        android:textSize="@dimen/dimenOf24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/vehicles_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/dimenOf0dp"
        android:layout_height="@dimen/dimenOf200dp"
        android:layout_marginStart="@dimen/dimenOf32dp"
        android:layout_marginEnd="@dimen/dimenOf32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/starships_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/podracer_anakin" />

    <ImageButton
        android:id="@+id/starships_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/dimenOf0dp"
        android:layout_height="@dimen/dimenOf200dp"
        android:layout_marginBottom="@dimen/dimenOf24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vehicles_button"
        app:layout_constraintStart_toStartOf="@+id/vehicles_button"
        app:layout_constraintTop_toBottomOf="@+id/vehicles_button"
        app:srcCompat="@drawable/x_wing" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicles"
        android:textColor="@color/white"
        android:textSize="@dimen/dimenOf24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vehicles_button"
        app:layout_constraintEnd_toEndOf="@+id/vehicles_button"
        app:layout_constraintStart_toStartOf="@+id/vehicles_button"
        app:layout_constraintTop_toTopOf="@+id/vehicles_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starships"
        android:textColor="@color/white"
        android:textSize="@dimen/dimenOf24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/starships_button"
        app:layout_constraintEnd_toEndOf="@+id/starships_button"
        app:layout_constraintStart_toStartOf="@+id/starships_button"
        app:layout_constraintTop_toTopOf="@+id/starships_button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dimenOf0dp"
        android:layout_height="@dimen/dimenOf70dp"
        android:layout_marginTop="@dimen/dimenOf48dp"
        android:src="@drawable/star_wars_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>